	Depot_Gate =
	{
		TriggerOnEntity = GetGoal("MOVER_s_mover_truck").GetEntity(),
		OnEnter = function(ent)
		{
			if ( Map.Depot_Door_Blown == 0 )
			{
			SetAvailableMapGoals( TEAM.AXIS, false, "ESCORT_Truck" );
