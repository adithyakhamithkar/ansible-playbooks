	Util.SetMaxUsers( 1, "MOUNTMG42_.*" );
	Util.SetMaxUsers( 1, "SWITCH.*" );
	Util.SetMaxUsers( 2, "CHECKPOINT_twc_forward_bunker" );

	Util.AddInvVehicle("MOVER_s_mover_truck");
	Util.SetGoalOffset( 0, -60, 0, "PLANT_Side_Wall" );

