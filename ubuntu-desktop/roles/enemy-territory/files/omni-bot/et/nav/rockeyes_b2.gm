		Util.DisableGoal( "Route_Ramp" );
		SetAvailableMapGoals( TEAM.AXIS, true, "ATTACK_ramp.*" );
		SetAvailableMapGoals( TEAM.AXIS, true, "BUILD_Ramp" );
		Map.Ramp_Dyno = 0;

		Util.MapDebugPrint( "Ramp_Destroyed" );
	},

	Side_Wall_Planted = function( trigger )
