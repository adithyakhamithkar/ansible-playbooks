		SetAvailableMapGoals( TEAM.ALLIES, true, "ROUTE_fs3" );
		
		foreach ( id and bot in BotTable )
		{
			if ( bot.GetTeam() == TEAM.AXIS )
			{
				if ( RandInt(0,1) < 1)
				{
					bot.ChangeSpawnPoint( 2 ); // downstairs
				}
				else 
