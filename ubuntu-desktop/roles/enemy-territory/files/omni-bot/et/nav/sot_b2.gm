		SetAvailableMapGoals( TEAM.AXIS, true, "CAPPOINT_GoldDropoff" );

		SetAvailableMapGoals( TEAM.ALLIES, true, "DEFEND_Delta.*" );
		SetAvailableMapGoals( TEAM.ALLIES, true, "MOUNTMG42_TempleMG42" );
