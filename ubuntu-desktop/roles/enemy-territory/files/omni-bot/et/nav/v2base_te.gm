{
	if ( TestMapOn )
		{ ETUtil.AutoTestMap(); }

	OnTrigger( "Allied team has constructed the Spawn MG42!", Map.allied_mg1_Built );
	OnTrigger( "The Field MG42 has been constructed.", Map.allied_mg2_Built );
