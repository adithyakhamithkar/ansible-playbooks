	// Set Map Goal Properties
	SetMapGoalProperties( "ATTACK_.*", {MinCampTime=2, MaxCampTime=10} );
	SetMapGoalProperties( "DEFEND_.*", {MinCampTime=3, MaxCampTime=40} );
