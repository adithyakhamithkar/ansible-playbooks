				ROUTE_exit_right = {},
				ROUTE_stairs = {}
			}
		},
		PLANT_side_gate = {
			ROUTE_allied_spawn = {
				ROUTE_water = {},
				ROUTE_hilltop = {}
			},
			ROUTE_sidedoor = {
				ROUTE_water = {},
				ROUTE_hilltop = {}
			}
		},
