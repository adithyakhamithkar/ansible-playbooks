		if ( TestMap )
		{ return; }

		SetAvailableMapGoals( TEAM.ALLIES, false, "CHECKPOINT.*" );
		SetAvailableMapGoals( TEAM.ALLIES, true, "PLANT_Coolant_Controls" );
		SetAvailableMapGoals( TEAM.ALLIES, true, "ATTACK_cool.*" );
