		if ( TestMap )
		{ return; }
		//Attack & Defend flag room , Plant @ Security_Door's
		
		SetAvailableMapGoals( TEAM.ALLIES, false, "BUILD_Truck" );
		SetAvailableMapGoals( TEAM.ALLIES, true, "CHECKPOINT.*" );
		SetAvailableMapGoals( TEAM.AXIS, true, "CHECKPOINT.*" );
