	{
		if ( TestMap )
			{ return; }

		Map.Coolant_Controls_Dyno = 0;
		
		SetAvailableMapGoals( TEAM.AXIS, true, "BUILD_Coolant_Controls" );
		
		Util.MapDebugPrint( "Coolant_Controls_Destroyed" );
	},
	
