		SetAvailableMapGoals( TEAM.AXIS, false, "ARTILLERY_D_.*" );
		SetAvailableMapGoals( TEAM.AXIS, false, "ARTILLERY_S_.*" );
		SetAvailableMapGoals( TEAM.AXIS, false, "CALLARTILLERY_.*" );		
