this.PrimaryFire.DefaultDesirability = 0.2;
this.PrimaryFire.SetDesirabilityRange(400, 5000, 0.6);

this.PrimaryFire.LowAmmoThreshold = 3;
this.PrimaryFire.LowAmmoPriority = 0.8;
